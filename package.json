{
  "name": "js-channel",
  "version": "0.1.0",
  "description": "Concurrency primitives for TypeScript and JavaScript.",
  "repository": "joeycumines/js-channel",
  "keywords": [
    "concurrency",
    "channel",
    "channels"
  ],
  "author": "Joseph Cumines <joeycumines@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joeycumines/js-channel/issues"
  },
  "homepage": "https://github.com/joeycumines/js-channel#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.3.93",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.6",
    "@types/node": "20.8.2",
    "cross-env": "^7.0.3",
    "documentation": "^14.0.2",
    "gts": "^5.2.0",
    "jest": "^29.7.0",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "npmignore": "^0.3.0",
    "typescript": "^5.2.2"
  },
  "type": "module",
  "source": "src/index.ts",
  "types": "build/src/index.d.ts",
  "main": "build/js-channel.js",
  "module": "build/js-channel.mjs",
  "unpkg": "build/js-channel.umd.js",
  "exports": {
    "types": "./build/src/index.d.ts",
    "import": "./build/js-channel.mjs",
    "require": "./build/js-channel.js",
    "default": "./build/js-channel.mjs"
  },
  "scripts": {
    "lint": "gts lint",
    "clean:gts": "gts clean",
    "compile": "microbundle -f esm,cjs,umd && rm -rf build/types && mv build/src build/types && rm -rf build/src build/test && mv build/types/src build/src && mv build/types/test build/test && rm -rf build/types",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "all": "npm-run-all -p test build",
    "clean": "npm run clean:gts",
    "test": "npm-run-all -p lint jest typecheck",
    "build": "npm-run-all -s clean:gts -p compile -s docs",
    "jest": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "docs": "documentation readme src/index.ts --section API -q --parse-extension ts",
    "release": "npm run -s build -s && npm t && git tag v$npm_package_version && git push && git push --tags && npm publish",
    "typecheck": "tsc",
    "prepack": "npmignore --auto"
  },
  "publishConfig": {
    "ignore": [
      "!/build",
      "/test",
      "/.editorconfig",
      "/.eslintignore",
      "/.eslintrc.json",
      "/.gitignore",
      "/.prettierrc.cjs",
      "/jest.config.cjs",
      "/tsconfig.json",
      "/.idea",
      "/.github",
      "/build/test"
    ]
  }
}
